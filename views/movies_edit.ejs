<%- include("partials/header") %>
	<div class = container>
		<h1>Edit Movie</h1>
		<form action="/movies/<%= movie._id %>?_method=PUT" method ="POST">
			<div class="form-group">
				<label for="title">Title</label>
				<input type="text" class="form-control" name ="title" value = "<%= movie.title %>" >
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input type="text" class="form-control" name ="description" value = "<%= movie.description %>">
			</div>
			<div class="form-group">
				<label for="producer">Producer</label>
				<input type="text" class="form-control" name ="producer" value = "<%= movie.producer %>" >
			</div>
			<div class="form-group">
				<label for="productionCompany">Production Company</label>
				<input type="text" class="form-control" name ="productionCompany" value = "<%= movie.productionCompany %>">
			</div>
			<div class="form-group">
				<label for="productionCompany">Actors</label>
				<input type="text" class="form-control" name ="actors" value = "<%= movie.actors %>">
			</div>
			<div class="form-group">
				<label for="date">Date</label>
				<input type="date" class="form-control" name ="date" value = "<%= movie.date.toISOString().split('T')[0] %>">
			</div>
			<div class="form-group">
				<label for="genre">Genre</label>
				<select class = "form-control" id="genre" name = "genre">
					<option disabled>--Choose Below --</option>
					<option <%= movie.genre === 'action' ? 'selected' : '' %>>Action</option>
					<option <%= movie.genre === 'horror' ? 'selected' : '' %>>Horror</option>
					<option <%= movie.genre === 'comedy' ? 'selected' : '' %>>Comedy</option>
					<option <%= movie.genre === 'drama' ? 'selected' : '' %>>Drama</option>
					<option <%= movie.genre === 'romance' ? 'selected' : '' %>>Romance</option>
					<option <%= movie.genre === 'animation' ? 'selected' : '' %>>Animation</option>
					<option <%= movie.genre === 'crime' ? 'selected' : '' %>>Crime</option>
					<option <%= movie.genre === 'documentary' ? 'selected' : '' %>>Documentary</option>
					<option <%= movie.genre === 'sports' ? 'selected' : '' %>>Sports</option>
				</select>
			</div>
			<div class="form-group form-check">
				<input type="checkbox" class="form-check-input" name ="Color" <%= movie.color ? 'checked' : '' %> >
				<label for="Color">Color</label>
			</div>
			<div class="form-group">
				<label for="image">Link To Image</label>
				<input type="text" class="form-control" name ="image_link" value = "<%= movie.image_link %>" >
			</div>

		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>

<%- include("partials/footer") %>